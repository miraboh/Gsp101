<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuizActivity">

    <TextView
            android:text="Text questions"
            android:layout_width="0dp"
            android:textSize="40sp"
            android:layout_height="wrap_content"
            android:id="@+id/txtQuestions"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="88dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/answer1"/>
    <TextView
            android:text="answer1"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer1"
            android:onClick="onClickAnswerOne"
            android:layout_marginTop="256dp"
            app:layout_constraintEnd_toEndOf="@+id/answer2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/answer2" android:clickable="true"/>
    <TextView
            android:text="answer2"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer2"
            android:onClick="onClickAnswerTwo"
            app:layout_constraintStart_toStartOf="@+id/answer3"
            android:layout_marginTop="46dp" app:layout_constraintTop_toBottomOf="@+id/answer1"
            app:layout_constraintEnd_toEndOf="@+id/answer3" android:clickable="true"/>
    <TextView
            android:text="answer3"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer3"
            android:onClick="onClickAnswerThree"
            app:layout_constraintStart_toStartOf="@+id/answer4"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/answer2"
            app:layout_constraintEnd_toEndOf="@+id/answer4" android:clickable="true"/>
    <TextView
            android:text="answer4"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:id="@+id/answer4"
            android:onClick="onClickAnswerFour"
            android:layout_marginTop="51dp"
            app:layout_constraintTop_toBottomOf="@+id/answer3" android:clickable="true"/>
</android.support.constraint.ConstraintLayout>